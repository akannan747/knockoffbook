<p id="alert"><%= alert %></p>

<h1>Login</h1>

<%= form_with url: sessions_path do |f| %>
  <div class='field'>
    <%= f.label :user_name %>
    <%= f.text_field :user_name %>
  </div>

  <div class='field'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class='actions'>
    <%= f.submit 'Log in' %>
  </div>
<% end %>
